    <h1 class="createheading">FORM FOR BOOKING A ROOM</h1>
    <form action="/bookform" method="POST">

        <div class="input">
            <label for="purpose">PURPOSE OF BOOKING</label>
            <input id="purpose" name="purpose" type="text" required>
        </div>

        <div class="input">
            <label for="capacity">REQUIRED CAPACITY OF ROOM</label>
            <input id="capacity" name="capacity" type="number" required>
        </div>
        <div class="input">
            <label for="society">SOCIETY NAME</label>
            <input id="society" name="society" type="text" value="NO" >
        </div>
        <div class="input">
            <label for="date">DATE OF BOOKING</label>
            <input id="date" name="date" type="date" >
        </div>
        <div class="input">
            <label for="time">TIME FOR BOOKING</label>

            <select name="time" type="text" id="time" required>
                <option value="ninetotwelve">9am-12pm</option>
                <option value="twelvetothree">12pm-3pm</option>
                <option value="threetosix">3pm-6pm</option>
                <option value="sixtoeight">6pm-8pm</option>
            </select>
        </div>
<br><br><br><br><br><br><br><br><br><br><br><br><br><br>
        <button  class="btn" >BOOK ROOM</button>
    </form>
